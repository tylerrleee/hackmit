# Vercel Production Environment Configuration
NODE_ENV=production
REACT_APP_DEPLOYMENT_TARGET=vercel
REACT_APP_ENVIRONMENT=production

# External Service URLs (Configure these in Vercel Dashboard)
REACT_APP_API_URL=https://webrtc-surgical-backend.railway.app
REACT_APP_WS_URL=wss://webrtc-surgical-backend.railway.app  
REACT_APP_AR_BRIDGE_URL=wss://webrtc-surgical-bridge.railway.app

# Build Configuration
GENERATE_SOURCEMAP=false
SKIP_PREFLIGHT_CHECK=true
CI=true

# PWA Settings
PUBLIC_URL=/
REACT_APP_PWA_ENABLED=true
REACT_APP_SERVICE_WORKER_ENABLED=true

# Performance Optimization
REACT_APP_BUNDLE_ANALYZER=false
REACT_APP_CHUNK_SIZE_LIMIT=244000

# Feature Flags
REACT_APP_ENABLE_OFFLINE_MODE=true
REACT_APP_ENABLE_TRANSLATION=true
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_CACHING=true

# Security Settings
REACT_APP_ENABLE_STRICT_CORS=true
REACT_APP_CORS_CREDENTIALS=true

# Connection Configuration
REACT_APP_CONNECTION_TIMEOUT=30000
REACT_APP_RETRY_ATTEMPTS=10
REACT_APP_RETRY_DELAY=3000