# Production Environment Configuration
# Copy this file to .env.production and update the values

# === DATABASE CONFIGURATION ===
# MongoDB Atlas connection string
MONGODB_ATLAS_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/surgical_platform?retryWrites=true&w=majority

# Redis Cloud URL (or other Redis provider)
REDIS_CLOUD_URL=redis://:<password>@<host>:<port>

# === SECURITY CONFIGURATION ===
# Strong JWT secret key (generate a secure random string)
JWT_SECRET_PRODUCTION=your-super-secure-jwt-secret-key-change-this-in-production

# Strong session secret (generate a secure random string)
SESSION_SECRET_PRODUCTION=your-super-secure-session-secret-change-this

# 32-byte encryption key for HIPAA compliance (generate securely)
ENCRYPTION_KEY_PRODUCTION=your-32-byte-encryption-key-for-hipaa-compliance

# === WEBRTC CONFIGURATION ===
# TURN server for WebRTC connectivity (required for production)
STUN_SERVER_URL=stun:stun.l.google.com:19302
TURN_SERVER_URL=turn:your-turn-server.com:3478
TURN_USERNAME=your-turn-username
TURN_CREDENTIAL=your-turn-password

# === FRONTEND CONFIGURATION ===
# Production frontend URL (where your app will be hosted)
FRONTEND_URL=https://your-domain.com

# Backend API URL (for frontend to connect to)
BACKEND_API_URL=https://api.your-domain.com

# WebSocket bridge URL (for AR clients)
WEBSOCKET_BRIDGE_URL=wss://bridge.your-domain.com

# === AWS CONFIGURATION (for file storage) ===
S3_BUCKET_NAME=surgical-platform-storage-prod
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# === DEPLOYMENT CONFIGURATION ===
# Docker image tags
IMAGE_TAG=latest
REGISTRY_URL=your-container-registry.com

# === MONITORING (optional) ===
SENTRY_DSN=https://your-sentry-dsn
LOG_LEVEL=info

# === HIPAA COMPLIANCE ===
HIPAA_AUDIT_ENABLED=true
DATA_RETENTION_DAYS=2555

# === SSL/TLS (if handling certificates in containers) ===
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem