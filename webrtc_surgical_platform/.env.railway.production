# Railway Production Environment Configuration
NODE_ENV=production
REACT_APP_DEPLOYMENT_TARGET=railway
REACT_APP_ENVIRONMENT=production

# Railway Service URLs
REACT_APP_API_URL=https://webrtc-surgical-backend.railway.app
REACT_APP_WS_URL=wss://webrtc-surgical-backend.railway.app
REACT_APP_AR_BRIDGE_URL=wss://webrtc-surgical-bridge.railway.app

# Database Configuration
MONGODB_URI=${{Mongo.MONGO_URL}}
REDIS_URL=${{Redis.REDIS_URL}}

# JWT Configuration
JWT_SECRET=${{JWT_SECRET}}
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=3001
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=https://webrtc-surgical-platform.vercel.app,https://*.railway.app
CORS_CREDENTIALS=true

# WebSocket Configuration
WS_PORT=8765
WS_HOST=0.0.0.0

# Feature Flags
ENABLE_TRANSLATION=true
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true

# Performance Settings
CONNECTION_RETRY_ATTEMPTS=5
HEARTBEAT_INTERVAL=30000
MAX_CONCURRENT_CONNECTIONS=100

# Security Settings
HELMET_ENABLED=true
RATE_LIMIT_MAX=200
RATE_LIMIT_WINDOW=900000

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true