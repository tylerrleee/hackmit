# Render Production Environment Configuration
NODE_ENV=production
REACT_APP_DEPLOYMENT_TARGET=render
REACT_APP_ENVIRONMENT=production

# Render Service URLs
REACT_APP_API_URL=https://webrtc-surgical-backend.onrender.com
REACT_APP_WS_URL=wss://webrtc-surgical-backend.onrender.com
REACT_APP_AR_BRIDGE_URL=wss://webrtc-surgical-bridge.onrender.com

# Database Configuration (MongoDB Atlas recommended for Render)
MONGODB_URI=${MONGODB_URI}
REDIS_URL=${REDIS_URL}

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h

# Server Configuration
PORT=10000
HOST=0.0.0.0

# CORS Configuration
CORS_ORIGIN=https://webrtc-surgical-platform.vercel.app,https://*.onrender.com
CORS_CREDENTIALS=true

# WebSocket Configuration
WS_PORT=8765
WS_HOST=0.0.0.0

# Feature Flags
ENABLE_TRANSLATION=true
ENABLE_ANALYTICS=true
ENABLE_RATE_LIMITING=true

# Performance Settings
CONNECTION_RETRY_ATTEMPTS=5
HEARTBEAT_INTERVAL=30000
MAX_CONCURRENT_CONNECTIONS=50

# Security Settings
HELMET_ENABLED=true
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=900000

# Logging Configuration
LOG_LEVEL=info
ENABLE_REQUEST_LOGGING=true

# Render-specific optimizations
PYTHON_VERSION=3.11
NODE_VERSION=18